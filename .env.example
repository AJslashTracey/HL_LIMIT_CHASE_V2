# Hyperliquid Limit Chase Bot Configuration
# Copy this file to .env and fill in your values

# Required: Your wallet credentials
# Get these from your wallet (MetaMask, etc.)
ADDRESS=0xYourWalletAddressHere
PK=0xYourPrivateKeyHere

# Optional: Agent wallet (if using API wallet)
AGENT_WALLET=0xYourAgentWalletAddress
PUBLIC_ADDRESSE=0xYourPublicAddress

# Network configuration
# Set TESTNET=true to use testnet (recommended for testing)
TESTNET=false
POST_ONLY=false

# Optional: Database URL for trade logging
# Format: postgresql://user:password@host:port/database
DATABASE_URL=postgresql://postgres:password@host:port/postgres

# Optional: NTFY notifications
# Set up at https://ntfy.sh
NTFY_TOPIC=your_topic_name
NTFY_ACCESS_TOKEN=your_access_token
